<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="taskname"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tv_task_description"
        android:layout_alignStart="@+id/tv_task_description" />

    <TextView
        android:id="@+id/tv_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="taskdescription"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_below="@+id/tv_task_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tasktype"
        android:layout_below="@+id/tv_task_description"
        android:layout_alignLeft="@+id/tv_task_description"
        android:layout_alignStart="@+id/tv_task_description" />

    <TextView
        android:id="@+id/tv_created_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="createdtime"
        android:layout_below="@+id/tv_task_type"
        android:layout_alignLeft="@+id/tv_task_type"
        android:layout_alignStart="@+id/tv_task_type" />

    <TextView
        android:id="@+id/tv_task_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by"
        android:layout_below="@+id/tv_created_time"
        android:layout_alignLeft="@+id/tv_created_time"
        android:layout_alignStart="@+id/tv_created_time" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_above="@+id/tv_task_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created:"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted by:"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="DELETE"
        android:id="@+id/btn_delete_item"
        android:backgroundTint="#cdd0ff"
        android:clickable="true"
        android:textColor="#507EBA"
        android:textSize="15sp"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/tv_price_mytask"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="DONE"
        android:id="@+id/btn_done_item"
        android:backgroundTint="#cdd0ff"
        android:clickable="true"
        android:textColor="#507EBA"
        android:textSize="15sp"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/tv_price_mytask"
        android:layout_toLeftOf="@+id/btn_delete_item"
        android:layout_toStartOf="@+id/btn_delete_item" />

    <TextView
        android:id="@+id/tv_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due dat"
        android:layout_below="@+id/tv_task_creator"
        android:layout_alignLeft="@+id/tv_task_creator"
        android:layout_alignStart="@+id/tv_task_creator" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due:"
        android:layout_below="@+id/tv_task_creator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price($):"
        android:layout_below="@+id/tv_due_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_price_mytask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_below="@+id/tv_due_date"
        android:layout_alignLeft="@+id/tv_due_date"
        android:layout_alignStart="@+id/tv_due_date" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:layout_alignTop="@+id/btn_done_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_below="@+id/tv_price_mytask"
        android:layout_alignLeft="@+id/tv_price_mytask"
        android:layout_alignStart="@+id/tv_price_mytask" />

</RelativeLayout>