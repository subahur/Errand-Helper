<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/mat1"
    android:id="@+id/button">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/email"
        android:id="@+id/tv_email"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tf_email"
        android:layout_alignTop="@+id/tv_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tv_email"
        android:layout_toStartOf="@+id/tv_email" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_password_1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tv_password"
        android:layout_toStartOf="@+id/tv_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/password"
        android:id="@+id/tv_password"
        android:layout_alignRight="@+id/tv_email"
        android:layout_alignEnd="@+id/tv_email"
        android:layout_alignBottom="@+id/tf_password_1"
        android:layout_alignTop="@+id/tf_password_1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_password_2"
        android:layout_alignTop="@+id/tv_retype_password"
        android:layout_toLeftOf="@+id/tv_retype_password"
        android:layout_toStartOf="@+id/tv_retype_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/retypepass"
        android:id="@+id/tv_retype_password"
        android:layout_below="@+id/tv_password"
        android:layout_alignLeft="@+id/tv_password"
        android:layout_alignStart="@+id/tv_password"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:text="Sign Up"
        android:id="@+id/btn_signup"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_retype_password"
        android:layout_alignEnd="@+id/tv_retype_password"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:onClick="onButtonClick"
        android:backgroundTint="#c1c9ff" />


</RelativeLayout>
