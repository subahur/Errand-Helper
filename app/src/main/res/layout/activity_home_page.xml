<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background3"
    tools:context="com.example.snr.errand_helper.HomePage">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_post_task"
        android:text="@string/post_task"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse_task"
        android:id="@+id/btn_browse_task"
        android:layout_below="@+id/btn_post_task"
        android:layout_alignLeft="@+id/btn_post_task"
        android:layout_alignStart="@+id/btn_post_task" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_task"
        android:id="@+id/btn_my_task"
        android:layout_below="@+id/btn_browse_task"
        android:layout_alignLeft="@+id/btn_post_task"
        android:layout_alignStart="@+id/btn_post_task"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/welcom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVusername"
        android:layout_alignBottom="@+id/welcom"
        android:layout_toRightOf="@+id/welcom"
        android:layout_toEndOf="@+id/welcom"
        android:text="@string/emptyString" />


</RelativeLayout>
