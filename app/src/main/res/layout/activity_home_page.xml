<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_color"
    tools:context="com.example.snr.errand_helper.HomePage">

    <Button
        android:id="@+id/btn_post_task"
        android:text="@string/create_task"
        android:layout_marginTop="74dp"
        android:backgroundTint="#cdd0ff"
        android:clickable="true"
        android:textColor="#507EBA"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/select_task"
        android:id="@+id/btn_browse_task"
        android:backgroundTint="#cdd0ff"
        android:clickable="true"
        android:textColor="#507EBA"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/btn_my_task"
        android:layout_alignLeft="@+id/btn_my_task"
        android:layout_alignStart="@+id/btn_my_task" />

    <Button
        android:text="@string/my_task"
        android:id="@+id/btn_my_task"
        android:backgroundTint="#cdd0ff"
        android:clickable="true"
        android:textColor="#507EBA"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btn_post_task"
        android:layout_alignLeft="@+id/btn_post_task"
        android:layout_alignStart="@+id/btn_post_task" />

    <Button
        android:text="@string/task_todo"
        android:id="@+id/btn_task_todo"
        android:backgroundTint="#cdd0ff"
        android:clickable="true"
        android:textColor="#507EBA"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btn_browse_task"
        android:layout_alignLeft="@+id/btn_browse_task"
        android:layout_alignStart="@+id/btn_browse_task" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/welcome"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User"
        android:id="@+id/TVusername"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />


</RelativeLayout>
