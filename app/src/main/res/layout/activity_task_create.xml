<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background3"
    tools:context="com.example.snr.errand_helper.TaskCreate"
    android:id="@+id/button">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/postnewtask"
        android:id="@+id/tv_post_new_task"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/taskname"
        android:id="@+id/tv_task_name"
        android:layout_below="@+id/btn_logout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_task_name"
        android:layout_centerVertical="true"
        android:layout_below="@id/tv_task_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tasktype"
        android:id="@+id/tv_task_type"
        android:layout_below="@+id/et_task_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_task_type"
        android:entries="@array/task_types"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tv_task_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"> </Spinner>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/taskdescription"
        android:id="@+id/tv_task_desc"
        android:layout_below="@id/sp_task_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_task_desc"
        android:layout_centerVertical="true"
        android:layout_below="@id/tv_task_desc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pick_due_time"
        android:id="@+id/tv_pick_time"
        android:layout_below="@id/et_task_desc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submittask"
        android:id="@+id/btn_submit_task"
        android:layout_below="@+id/btn_pick_time"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:id="@+id/btn_logout"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_post_new_task"
        android:layout_alignEnd="@+id/tv_post_new_task"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pick_time"
        android:text="@string/pick_due_time"
        android:layout_below="@id/tv_pick_time"
        android:onClick="showTimePickerDialog" />

</RelativeLayout>
